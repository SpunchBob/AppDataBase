<Page x:Class="AppDataBaseView.pages.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="440"
      Title="SelectionPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <TabControl Width="440" Height="600">
            <TabItem Header="Выборка 1">
                <StackPanel>
                    <Grid Width="440" Height="570">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="400"/>
                        </Grid.RowDefinitions>

                        <Label Style="{StaticResource DBeaverLabel}" Content="Цена перевозки:" Width="300" Height="40"
                               Grid.Row="0" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
                        <Label Style="{StaticResource DBeaverLabel}" Content="Выброка:" Width="100" Height="40"
                               Grid.Row="1" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
                        <ComboBox x:Name="selection_cb" Style="{StaticResource DBeaverComboBoxHorizontal}" Grid.Row="1" Width="160" Height="28"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,90,0" SelectedIndex="0">
                            <ComboBoxItem Content="Больше"/>
                            <ComboBoxItem Content="Меньше"/>
                        </ComboBox>
                        <Label Style="{StaticResource DBeaverLabel}" Content="Значение:" Width="100" Height="40"
                               HorizontalAlignment="Left" VerticalContentAlignment="Center" Grid.Row="2" Margin="10,0,0,0"/>
                        <TextBox x:Name="selection_tb" Style="{StaticResource DBeaverTextBox}" Grid.Row="2" Width="160" Height="28"
                                 HorizontalAlignment="Center" Margin="0,0,90,0"/>
                        <Button Style="{StaticResource DBeaverButton}" Grid.Row="3" Content="Совершить выборку" Width="200" Height="28"
                                HorizontalAlignment="Left" Margin="10,0,0,0" Click="Button_Click"/>
                        <DataGrid x:Name="data" Style="{StaticResource DBeaverDataGrid}" Grid.Row="5" Height="320" Width="400"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Выборка 2">
                
            </TabItem>
            <TabItem Header="Выборка 3">
                
            </TabItem>
        </TabControl>
    </Grid>
</Page>

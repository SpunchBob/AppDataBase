<Page x:Class="AppDataBaseView.pages.loads_pages.LoadsPageChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.loads_pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="440"
      Title="LoadsPageChange">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="420"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="64"/>
                    <RowDefinition Height="64"/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <ComboBox  
           Style="{StaticResource DBeaverComboBox}"
           Grid.Row="0"
           x:Name="loads_cb"
           Width="200"
           Height="28"
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
                        Margin="8, 0, 0, 0" Cursor="Hand" SelectionChanged="load_type_code_cb_SelectionChanged"
       />

                <Label Style="{StaticResource DBeaverLabel}"
            Grid.Row="1"
            Content="Код груза: "
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
            Grid.Row="1"
            x:Name="code_tb"
            Width="200"
            Height="28"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
                         IsEnabled="False"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="2"
                Content="Наименование: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
                />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="2"
                x:Name="name_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="3"
                Content="Код вида груза: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <ComboBox Style="{StaticResource DBeaverComboBox}"
                Grid.Row="3"
                x:Name="load_type_code_cb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" SelectionChanged="load_type_code_cb_SelectionChanged"
                />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="4"
                Content="Cрок годности: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="4"
                x:Name="exp_date_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="5"
                Content="Описание: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="5"
                x:Name="describe_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Grid Grid.Row="11">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>

                </Grid>

                <Button Style="{StaticResource DBeaverButton}"
                    x:Name="change_btn"
                    Content="Изменить"
                    Width="382"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,7,0,0" Grid.Row="11" Click="change_btn_Click"/>

                <Label Style="{StaticResource DBeaverLabel}" x:Name="info_lb" Grid.Row="12" FontSize="16"
       VerticalAlignment="Center" HorizontalAlignment="Center"
       VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="40" Width="302"/>

            </Grid>

        </Grid>

    </Grid>
</Page>

<Page x:Class="AppDataBaseView.pages.loads_pages.LoadsPageChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.loads_pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="LoadsPageChange">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBlueBrush}" 
                BorderBrush="{StaticResource BorderBlueBrush}" 
                BorderThickness="1"
                CornerRadius="2"
                Margin="0,0,0,15">
            <TextBlock Text="ИЗМЕНЕНИЕ ГРУЗА" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Padding="10,8"/>
        </Border>

        <!-- Выбор груза -->
        <GroupBox Grid.Row="1"
                  Header="ВЫБОР ГРУЗА" 
                  Style="{StaticResource DBeaverGroupBox}"
                  Margin="0,0,0,15">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Style="{StaticResource DBeaverComboBox}"
                          x:Name="loads_cb"
                          Height="28"
                          VerticalAlignment="Center"
                          SelectionChanged="load_type_code_cb_SelectionChanged"
                          Cursor="Hand"/>
                <TextBlock Grid.Column="2"
                           Text="▼"
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
            </Grid>
        </GroupBox>

        <!-- Основная форма -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,10">
                <!-- Основная информация -->
                <GroupBox Header="ОСНОВНАЯ ИНФОРМАЦИЯ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Код груза:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="code_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"
                                     IsEnabled="False"
                                     Background="#F5F5F5"/>
                        </Grid>

                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Наименование:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="name_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Классификация -->
                <GroupBox Header="КЛАССИФИКАЦИЯ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Код вида груза:"
                                   VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource DBeaverComboBox}"
                                      x:Name="load_type_code_cb"
                                      Grid.Column="1"
                                      Height="28"
                                      VerticalAlignment="Center"
                                      SelectionChanged="load_type_code_cb_SelectionChanged"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Характеристики -->
                <GroupBox Header="ХАРАКТЕРИСТИКИ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Срок годности:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="exp_date_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Описание:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="describe_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Панель действий -->
        <Border Grid.Row="3" 
                Background="{StaticResource LightBlueBrush}"
                BorderBrush="{StaticResource BorderBlueBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,10,0,0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource DBeaverButton}"
                        x:Name="change_btn"
                        Grid.Column="1"
                        Content="Изменить"
                        Width="120"
                        Height="35"
                        Cursor="Hand" 
                        Click="change_btn_Click"/>
            </Grid>
        </Border>

        <!-- Информационная метка -->
        <Label x:Name="info_lb" 
               Grid.Row="2"
               Grid.RowSpan="2"
               FontSize="14"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"
               Margin="0,0,0,60"
               Background="#E8F4FD"
               Padding="10,5"
               BorderBrush="{StaticResource BorderBlueBrush}"
               BorderThickness="1"
               Visibility="Collapsed"/>
    </Grid>
</Page>
<Page x:Class="AppDataBaseView.pages.FlightsPages.FlightsPageAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.FlightsPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="440"
      Title="FlightsPagesAdd">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="40"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="420"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>

                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="64"/>
                    <RowDefinition Height="64"/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Label Style="{StaticResource DBeaverLabel}"
            Grid.Row="0"
            Content="Код заказчика "
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
            Grid.Row="0"
            x:Name="code_tb"
            Width="200"
            Height="28"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="1"
                Content="Заказчик: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
                />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="1"
                x:Name="customer_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="2"
                Content="Откуда: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="2"
                x:Name="from_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="3"
                Content="Куда: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="3"
                x:Name="Where_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="4"
                Content="Дата отправления: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="4"
                x:Name="send_date_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="5"
                Content="Дата прибытия: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="5"
                x:Name="arve_date_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="6"
                Content="Код груза: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <ComboBox Style="{StaticResource DBeaverComboBox}"
                Grid.Row="6"
                x:Name="load_code_cb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="7"
                Content="Цена: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="7"
                x:Name="price_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <CheckBox Style="{StaticResource DBeaverCheckBox}"
                Grid.Row="8"
                x:Name="is_bought_rb"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Отметка об оплате"
                Margin="10, 0, 0, 0"
                />

                <CheckBox Style="{StaticResource DBeaverCheckBox}"
                Grid.Row="9"
                x:Name="is_refund_rb"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Отметка об возврате"
                Margin="10, 0, 0, 0"
                />

                <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="10"
                Content="Код сотрудника: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                <ComboBox Style="{StaticResource DBeaverComboBox}"
                Grid.Row="10"
                x:Name="employee_code_cb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                <Grid Grid.Row="11">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>

                </Grid>

                <Button Style="{StaticResource DBeaverButton}"
                    x:Name="write_btn"
                    Click="WriteButton_Click"
                    Content="Добавить"
                    Width="382"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" Grid.Row="11"/>

                <Label Style="{StaticResource DBeaverLabel}" x:Name="info_lb" Grid.Row="12" FontSize="16"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            </Grid>

        </Grid>

    </Grid>
</Page>

<Page x:Class="AppDataBaseView.pages.types_loads_pages.TypesLoadsPageDelete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.types_loads_pages"
      mc:Ignorable="d" 
      d:DesignHeight="260" d:DesignWidth="440"
      Title="TypesLoadsPageDelete">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBlueBrush}" 
                BorderBrush="{StaticResource BorderBlueBrush}" 
                BorderThickness="1"
                CornerRadius="2"
                Margin="0,0,0,15">
            <TextBlock Text="УДАЛЕНИЕ ТИПА ГРУЗА" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Padding="10,8"/>
        </Border>

        <!-- Основной контент -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Выберите тип груза для удаления:"
                       Style="{StaticResource DBeaverLabel}"
                       FontSize="12"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Style="{StaticResource DBeaverComboBox}"
                          x:Name="loads_cb"
                          Height="32"
                          VerticalAlignment="Center"
                          Cursor="Hand"/>

                <TextBlock Grid.Column="2"
                           Text="▼"
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
            </Grid>
        </StackPanel>

        <!-- Панель действий -->
        <Border Grid.Row="2" 
                Background="{StaticResource LightBlueBrush}"
                BorderBrush="{StaticResource BorderBlueBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,15,0,0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource DBeaverButton}"
                        x:Name="delete_btn"
                        Grid.Column="1"
                        Content="Удалить"
                        Width="120"
                        Height="35"
                        Background="#D9534F"
                        BorderBrush="#D9534F"
                        Cursor="Hand" 
                        Click="delete_btn_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
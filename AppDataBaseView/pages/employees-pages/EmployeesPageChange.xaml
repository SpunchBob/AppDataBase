<Page x:Class="AppDataBaseView.pages.EmployeesPages.EmployeesPageChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.EmployeesPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="EmployeesPageChange">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBlueBrush}" 
                BorderBrush="{StaticResource BorderBlueBrush}" 
                BorderThickness="1"
                CornerRadius="2"
                Margin="0,0,0,10">
            <TextBlock Text="ИЗМЕНЕНИЕ СОТРУДНИКА" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Padding="10,8"/>
        </Border>

        <!-- Выбор сотрудника -->
        <GroupBox Grid.Row="1"
                  Header="ВЫБОР СОТРУДНИКА" 
                  Style="{StaticResource DBeaverGroupBox}"
                  Margin="0,0,0,15">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Style="{StaticResource DBeaverComboBox}"
                          x:Name="employees_cb"
                          Height="28"
                          VerticalAlignment="Center"
                          SelectionChanged="EmployeeComboBox_SelctionChanged"/>
                <TextBlock Grid.Column="2"
                           Text="▼"
                           Foreground="{StaticResource PrimaryBlueBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
            </Grid>
        </GroupBox>

        <!-- Основная форма -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,10">
                <!-- Личная информация -->
                <GroupBox Header="ЛИЧНАЯ ИНФОРМАЦИЯ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <!-- Код сотрудника -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Код:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="code_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"
                                     IsEnabled="False"
                                     Background="#F5F5F5"/>
                        </Grid>

                        <!-- ФИО -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="ФИО:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="fcs_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Возраст -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Возраст:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="age_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Пол -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Пол:"
                                   VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <RadioButton Style="{StaticResource DBeaverRadioButton}"
                                             x:Name="is_male_rb"
                                             Content="Мужчина"
                                             Margin="10,0,20,0"
                                             VerticalAlignment="Center"/>
                                <RadioButton Style="{StaticResource DBeaverRadioButton}"
                                             x:Name="is_female_rb"
                                             Content="Женщина"
                                             VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Контактная информация -->
                <GroupBox Header="КОНТАКТНАЯ ИНФОРМАЦИЯ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <!-- Адрес -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Адрес:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="addres_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Телефон -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Телефон:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="phone_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Документы -->
                <GroupBox Header="ДОКУМЕНТЫ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <!-- Паспортные данные -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Паспорт:"
                                   VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource DBeaverTextBox}"
                                     x:Name="passport_tb"
                                     Grid.Column="1"
                                     Height="28"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Должность -->
                <GroupBox Header="ДОЛЖНОСТЬ" 
                          Style="{StaticResource DBeaverGroupBox}"
                          Margin="0,0,0,15">
                    <StackPanel Margin="0,8">
                        <!-- Код должности -->
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource DBeaverLabel}"
                                   Content="Код Должности:"
                                   VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource DBeaverComboBox}"
                                      x:Name="position_code_cb"
                                      Grid.Column="1"
                                      Height="28"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Панель действий -->
        <Border Grid.Row="3" 
                Background="{StaticResource LightBlueBrush}"
                BorderBrush="{StaticResource BorderBlueBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,10,0,0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource DBeaverButton}"
                        x:Name="change_btn"
                        Grid.Column="1"
                        Content="Изменить"
                        Width="120"
                        Height="35"
                        Cursor="Hand" 
                        Click="change_btn_Click"/>
            </Grid>
        </Border>

        <!-- Информационная метка -->
        <Label x:Name="info_lb" 
               Grid.Row="2"
               Grid.RowSpan="2"
               FontSize="14"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center"
               Margin="0,0,0,60"
               Background="#E8F4FD"
               Padding="10,5"
               BorderBrush="{StaticResource BorderBlueBrush}"
               BorderThickness="1"
               Visibility="Collapsed"/>
    </Grid>
</Page>
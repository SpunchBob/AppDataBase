<Page x:Class="AppDataBaseView.pages.EmployeesPages.EmployeesPageAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.EmployeesPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="440"
      Title="EmployeesPageAdd">

    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid>
        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="410"/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>

                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="36"/>
                        <RowDefinition Height="64"/>
                        <RowDefinition Height="64"/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="0"
                Content="Код сотрудника: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
                />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="0"
                x:Name="code_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="1"
                Content="ФИО: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
                />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="1"
                x:Name="fcs_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="2"
                Content="Возраст: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="2"
                x:Name="age_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="4"
                Content="Адрес: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="4"
                x:Name="addres_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="5"
                Content="Телефон: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="5"
                x:Name="phone_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="6"
                Content="Пасспортные данные: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <TextBox Style="{StaticResource DBeaverTextBox}"
                Grid.Row="6"
                x:Name="passport_tb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />
                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="3"
                Content="Пол: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <RadioButton Style="{StaticResource DBeaverRadioButton}"
                Grid.Row="3"
                x:Name="is_male_rb"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Мужчина"
                Margin="0, 0, 120, 0"
            />

                    <RadioButton Style="{StaticResource DBeaverRadioButton}"
                Grid.Row="3"
                x:Name="is_female_rb"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Женщина"
                Margin="0, 0, 5, 0"
            />

                    <Label Style="{StaticResource DBeaverLabel}"
                Grid.Row="7"
                Content="Код должности: "
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10, 0, 0, 0"
            />

                    <ComboBox  
                Style="{StaticResource DBeaverComboBox}"
                Grid.Row="7"
                x:Name="position_code_cb"
                Width="200"
                Height="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
            />

                    <Grid Grid.Row="11">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition/>

                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource DBeaverButton}"
                    Click="WriteButton_Click"
                                x:Name="add_btn"
                    Grid.Column="1"
                    Content="Добавить"
                    Width="382"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0, 0, 0, 0"/>
                    </Grid>


                    <Label x:Name="info_lb" Grid.Row="12" FontSize="16"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

                </Grid>

            </Grid>

        </Grid>
    </Grid>
</Page>

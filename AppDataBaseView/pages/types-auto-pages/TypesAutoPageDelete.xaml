<Page x:Class="AppDataBaseView.pages.types_auto_pages.TypesAutoPageDelete"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppDataBaseView.pages.types_auto_pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="440"
      Title="TypesAutoPageDelete">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/pages/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <ComboBox Style="{StaticResource DBeaverComboBox}" x:Name="typeAuto_cb"
                  Width="200" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left"
                  Margin="8,68,0,0" Cursor="Hand"/>

        <Label Style="{StaticResource DBeaverLabel}" FontSize="16" Content="Выберете тип авто" Width="300"
               Height="42" Margin="8,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Style="{StaticResource DBeaverButton}"
            x:Name="delete_btn"
            Content="Удалить"
            Width="160"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="248,62,0,0" Cursor="Hand" Click="delete_btn_Click"/>

    </Grid>
</Page>

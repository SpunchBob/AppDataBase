<Window x:Class="AppDataBaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDataBaseView"
        mc:Ignorable="d"
        Title="Базы данных" Height="420" Width="730">

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="42"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="500"/>

            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="writeButton"
                    Grid.Column="0"
                    Content="Записать"
                    Width="80"
                    Height="32"
                    Margin="0, 5, 0, 0"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="changeButton"
                    Grid.Column="1"
                    Content="Изменить"
                    Width="80"
                    Height="32"
                    Margin="0, 5, 0, 0"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="deleteButton"
                    Grid.Column="2"
                    Content="Удалить"
                    Width="80"
                    Height="32"
                    Margin="0, 5, 0, 0"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="readButton"
                    Grid.Column="3"
                    Content="Чтение"
                    Width="80"
                    Height="32"
                    Margin="0, 5, 0, 0"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="selection_btn"
                    Grid.Column="4"
                    Content="Выборка"
                    Width="80"
                    Height="32"
                    Margin="10,8,10,0" VerticalAlignment="Top" Cursor="Hand"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="function_btn"
                    Grid.Column="6"
                    Content="FUNC"
                    Width="80"
                    Height="32"
                    Margin="0,5,0,0"/>

            <Button Style="{StaticResource DBeaverButton}"
                    x:Name="union_btn"
                    Grid.Column="5"
                    Content="JOIN"
                    Width="80"
                    Height="32"
                    Margin="0,5,0,0"/>
        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="500"/>

            </Grid.ColumnDefinitions>

            <ListBox Style="{StaticResource DBeaverListBox}"
                     x:Name="tablesListBox"
                     Grid.Column="0"
                     Width="200"
                     Height="320"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="10, 10, 0, 0">

            </ListBox>

            <DataGrid Style="{StaticResource DBeaverDataGrid}"
                      x:Name="data"
                      Grid.Column="1"
                      Width="480"
                      Height="320"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      Margin="0, 10, 0, 0"/>

        </Grid>

    </Grid>

</Window>

<Window x:Class="AppDataBaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDataBaseView"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="730">

    <Window.Resources>

        <Style x:Name="Label_Style" TargetType="Label">

            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="14"/>

        </Style>

        <Style x:Name="TextBox_Style" TargetType="TextBox">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="tb_border"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                >
                            <Grid>
                                <ScrollViewer 
                                    x:Name="PART_ContentHost" 
                                    Focusable="False" 
                                    HorizontalScrollBarVisibility="Hidden" 
                                    VerticalScrollBarVisibility="Hidden"
                                    Margin="2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tb_border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

        <Style x:Name="Button_Style" TargetType="Button">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="button_border"
                                Background="WhiteSmoke"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="4"
                                >
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="button_border" Property="Background" Value="#ffffff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="button_border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

        <Style x:Name="ListBox_Style" TargetType="ListBox">

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="ListBox">
                        <Border
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ScrollViewer Margin="0"
                                          Focusable="false"
                                          VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Hidden">
                                <StackPanel Margin="2"
                                            IsItemsHost="True"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>

                </Setter.Value>

            </Setter>

        </Style>

    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
        
            <RowDefinition Height="42"/>
            <RowDefinition/>
        
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="500"/>

            </Grid.ColumnDefinitions>

            <Button x:Name="writeButton"
                    Grid.Column="0"
                    Content="Записать"
                    Width="80"
                    Height="32"
                    Margin="0, 5, 0, 0"/>

            <Button x:Name="changeButton"
                    Grid.Column="1"
                    Content="Изменить"
                    Width="80"
                    Height="32"
                    Margin="30,8,90,2" Grid.ColumnSpan="2"/>

            <Button x:Name="deleteButton"
                    Grid.Column="2"
                    Content="Удалить"
                    Width="80"
                    Height="32"
                    Margin="40,8,480,2" Grid.ColumnSpan="2"/>

        </Grid>
        
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
                <ColumnDefinition Width="500"/>

            </Grid.ColumnDefinitions>

            <ListBox x:Name="tablesListBox"
                     Grid.Column="0"
                     Width="200"
                     Height="320"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="10, 10, 0, 0"
                     SelectedIndex="0">

                <ListBoxItem FontSize="16">

                    <ListBoxItem.Content>

                        <StackPanel Orientation="Horizontal">

                            <CheckBox HorizontalAlignment="Left"
                                         VerticalAlignment="Center"/>
                            <Label Content="Работники"
                                   FontSize="16"/>

                        </StackPanel>
                        
                    </ListBoxItem.Content>
                    
                </ListBoxItem>

                <ListBoxItem FontSize="16">

                    <ListBoxItem.Content>

                        <StackPanel Orientation="Horizontal">

                            <CheckBox HorizontalAlignment="Left"
                                      VerticalAlignment="Center"/>
                            <Label Content="Перевозки"
                                   FontSize="16"/>

                        </StackPanel>

                    </ListBoxItem.Content>

                </ListBoxItem>

                <ListBoxItem FontSize="16">

                    <ListBoxItem.Content>

                        <StackPanel Orientation="Horizontal">

                            <CheckBox HorizontalAlignment="Left"
                                      VerticalAlignment="Center"/>
                            <Label Content="Грузы"
                                   FontSize="16"/>

                        </StackPanel>

                    </ListBoxItem.Content>

                </ListBoxItem>

                <ListBoxItem FontSize="16">

                    <ListBoxItem.Content>

                        <StackPanel Orientation="Horizontal">

                            <CheckBox HorizontalAlignment="Left"
                                      VerticalAlignment="Center"/>
                            <Label Content="Типы авто"
                                   FontSize="16"/>

                        </StackPanel>

                    </ListBoxItem.Content>

                </ListBoxItem>

                <ListBoxItem FontSize="16">

                    <ListBoxItem.Content>

                        <StackPanel Orientation="Horizontal">

                            <CheckBox HorizontalAlignment="Left"
                                      VerticalAlignment="Center"/>
                            <Label Content="Типы грузов"
                                   FontSize="16"/>

                        </StackPanel>

                    </ListBoxItem.Content>

                </ListBoxItem>

            </ListBox>

            <DataGrid x:Name="data"
                      Grid.Column="1"
                      Width="480"
                      Height="320"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      Margin="0, 10, 0, 0"/>

        </Grid>
    
    </Grid>

</Window>
